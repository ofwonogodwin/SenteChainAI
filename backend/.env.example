# Backend Environment Configuration

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/sentechainai

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=https://sepolia.base.org
CREDIT_REGISTRY_ADDRESS=your_credit_registry_contract_address
LENDING_POOL_ADDRESS=your_lending_pool_contract_address
SENTE_BADGE_ADDRESS=your_sente_badge_contract_address

# AI Model Configuration
MODEL_PATH=models/credit_score_model.pkl
MIN_TRANSACTIONS=5
SCORE_THRESHOLD=60

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_generate_with_openssl
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
